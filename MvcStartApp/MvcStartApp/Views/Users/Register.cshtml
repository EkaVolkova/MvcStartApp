
@{
    ViewData["Title"] = "Register";
}


<style>
    table {
        border-spacing: 0 15px;
        align-self: center;
    }

    th {
        background-color: #4287f5;
        color: white;
    }

    th,
    td {
        width: 150px;
        text-align: center;
        border: none;
        padding: 5px;
    }

    h2 {
        color: #4287f5;
    }

    .submit-button {
        position: absolute;
        margin-left: 140px;
    }
</style>

<div class="text-center">
    <h2 class="display-4" style="text-align: left">Регистрация пользователя</h2>
    <br>
    @if (Model == null)
    {
        <form method="post">
            <table>
                <tr>
                    <td>Имя пользователя:</td>
                    <td>
                        <input type="text" name="FirstName" />
                    </td>

                </tr>
                <tr>
                    <td>Фамилия:</td>
                    <td>
                        <input type="text" name="LastName" />
                    </td>
                </tr>
            </table>
            <div class="submit-button">
                <input type="submit" value="Регистрация" />
            </div>
        </form>
    }
    else
    {
        @await Html.PartialAsync("_Thanks")
    }
</div>